<!-- Boutons côte à côte -->
<HBox alignment="CENTER" spacing="10.0">
    <Button fx:id="connexion">Se connecter</Button>
    <Button fx:id="enregistrer"  onAction="#enregistrerButtonClick">S'enregistrer</Button>
</HBox>
</VBox>
